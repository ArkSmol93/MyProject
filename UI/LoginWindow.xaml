<Window x:Class="UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="428" Width="734">
    <StackPanel Margin="10">
        <TextBox x:Name="UsernameTextBox" Text="Wpisz login" Foreground="Gray"
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Width="200"/>
        <PasswordBox x:Name="PasswordBox" Foreground="Gray" 
         GotFocus="PasswordBox_GotFocus" LostFocus="TextBox_LostFocus" Width="200"/>
        <TextBlock x:Name="MessageTextBlock" Foreground="Red" Margin="0,10,0,0"/>
        <Button Content="Zaloguj" Click="LoginButton_Click" Height="29" RenderTransformOrigin="0.502,0.592"/>
    </StackPanel>
</Window>
